# EditorConfig file overriding some rules for test projects
is_global = true
global_level = 300

###########################
# Code Quality            #
###########################

# Remove the underscores from member name
dotnet_diagnostic.CA1707.severity = none

# Nested types should not be visible
dotnet_diagnostic.CA1034.severity = none

# Exception type System.Exception is not sufficiently specific
dotnet_diagnostic.CA2201.severity = none

# Remove this empty class, write its code or make it an "interface"
dotnet_diagnostic.S2094.severity = none

###########################
# StyleCop                #
###########################

# A property should not follow a method
dotnet_diagnostic.SA1201.severity = silent

# 'public' members should come before 'private' members
dotnet_diagnostic.SA1202.severity = silent

# Static members should appear before non-static members
dotnet_diagnostic.SA1204.severity = silent

# Single-line comment should be preceded by blank line
dotnet_diagnostic.SA1515.severity = suggestion

# Elements should be documented
dotnet_diagnostic.SA1600.severity = none

# Partial elements should be documented
dotnet_diagnostic.SA1601.severity = none

# Generic Type parameters should be documented
dotnet_diagnostic.SA1622.severity = none

###########################
# Roslynator Analysers    #
###########################

# Use "Async" suffix in names of methods that return an awaitable type
dotnet_diagnostic.RCS1046.severity = none
dotnet_diagnostic.VSTHRD200.severity = none

# Mark local variable as const
dotnet_diagnostic.RCS1118.severity = silent

###########################
# Menees.Analyzers        #
###########################

# Use a single return
dotnet_diagnostic.MEN007.severity = none

# Compiler Warning (level 4) - Missing XML comment for publicly visible type or member
dotnet_diagnostic.CS1591.severity = none

dotnet_diagnostic.SA1101.severity = none

